<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <com.withcheese.lptt_benz.view.ThisProcessItem
        android:id="@+id/itemProcessSelectStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Which station was n.I.O?"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSSRollerPit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@color/strict_gray"
            android:padding="20dp"
            android:text="Roller Pit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/small_size" />

        <Button
            android:id="@+id/btnSSISTKEngine"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/strict_gray"
            android:padding="20dp"
            android:text="Engine Check./ Surr.\nView cal."
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/small_size" />

        <Button
            android:id="@+id/btnSSHud"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/strict_gray"
            android:padding="20dp"
            android:text="HUD"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/small_size" />

        <Button
            android:id="@+id/btnSSTestTrack"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/strict_gray"
            android:padding="20dp"
            android:text="Test track"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/small_size" />
    </LinearLayout>


</LinearLayout>